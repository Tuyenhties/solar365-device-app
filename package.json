{
  "name": "solar365-device-app",
  "version": "1.0.0",
  "description": "To start the server, inside server directory:",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "client": "cd client && npm start",
    "server-dev": "cd server && nodemon index.js",
    "server-prod": "cd server && npm run start",
    "dev": "concurrently -n 'server,client' -c 'red,green' \"npm run server-dev\" \"npm run client\"",
    "start": "npm run server-prod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^6.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  }
}
